{
	"name": "discuss",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "dotenv -e .env.local -- next dev",
		"build": "prisma migrate deploy && next build",
		"start": "next start",
		"lint": "next lint",
		"start:db": "docker run --rm -p 5432:5432 -v postgres-data:/var/lib/postgresql/data -e POSTGRES_HOST_AUTH_METHOD=trust postgres",
		"prisma:migrate:local": "dotenv -e .env.local -- npx prisma migrate dev --schema=prisma/schema.prisma",
		"prisma:generate:local": "dotenv -e .env.local -- npx prisma generate --schema=prisma/schema.prisma",
		"postinstall": "prisma generate"
	},
	"dependencies": {
		"@auth/core": "^0.37.4",
		"@auth/prisma-adapter": "^2.7.4",
		"@heroicons/react": "^2.2.0",
		"@heroui/react": "^2.6.14",
		"@prisma/client": "^6.3.1",
		"dotenv-cli": "^8.0.0",
		"framer-motion": "^12.4.1",
		"next": "15.1.6",
		"next-auth": "^5.0.0-beta.25",
		"prisma": "^6.3.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.54.2",
		"react-markdown": "^9.0.3",
		"remark-gfm": "^4.0.1",
		"timeago.js": "^4.0.2",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.1.6",
		"postcss": "^8",
		"tailwindcss": "^3.4.1",
		"typescript": "^5"
	}
}
